<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ScrollView1"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <TableLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TableRow
                android:id="@+id/tabIdentifiant"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txtIdentifiant"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Identifiant" />

                <TextView
                    android:id="@+id/txtIdentifiantValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

            </TableRow>

            <TableRow
                android:id="@+id/tabIdentite"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txtIdentite"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Identite" />

                <TextView
                    android:id="@+id/txtIdentiteValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Nom Prenom" />

            </TableRow>

            <TableRow
                android:id="@+id/tabTel"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txtTel"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Telephone" />

                <TextView
                    android:id="@+id/txtTelValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="01.23.45.67.89" />

            </TableRow>

            <TableRow
                android:id="@+id/tabAdresse"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txtAdresse"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Adresse" />

            </TableRow>

            <TableRow
                android:id="@+id/tabAdresseValue"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txtAdresseValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

            </TableRow>

            <TableRow
                android:id="@+id/tabCpVille"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txtCp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

                <TextView
                    android:id="@+id/txtVille"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

            </TableRow>

            <TableRow
                android:id="@+id/tabCompteur"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txtCompteur"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Compteur" />

                <TextView
                    android:id="@+id/txtCompteurValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

            </TableRow>

            <TableRow
                android:id="@+id/tabAncienReleve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txtAncienReleve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Ancien Releve" />

                <TextView
                    android:id="@+id/txtAncienReleveValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

            </TableRow>

            <TableRow
                android:id="@+id/tabDateAncienReleve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txtDateAncienReleve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date ancien releve" />

                <TextView
                    android:id="@+id/txvDateAncienReleveValue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="TextView" />

            </TableRow>

            <TableRow
                android:id="@+id/tabReleve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txtReleve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Releve" />

                <EditText
                    android:id="@+id/editReleve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10" >

                    <requestFocus />
                </EditText>

            </TableRow>

            <TableRow
                android:id="@+id/tabDateReleve"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txtDateReleve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Date releve" />

                <EditText
                    android:id="@+id/editDateReleve"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10" />

            </TableRow>

            <TableRow
                android:id="@+id/tabSituation"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/txtSituation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Situation" />

                <EditText
                    android:id="@+id/editSituation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10" />

            </TableRow>

        </TableLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <Button
                android:id="@+id/btnGeoloc"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Geoloc" />

            <Button
                android:id="@+id/modCli_btnOk"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Valider" />

            <Button
                android:id="@+id/modCli_btnAnnuler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Annuler" />

        </LinearLayout>

    </LinearLayout>

</ScrollView><LinearLayout
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:layout_marginTop="25dp" >

    <Button
        android:id="@+id/btnGeoloc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modifClient_btnGeoloc" />

    <Button
        android:id="@+id/btnOk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="10dp"
        android:text="@string/modifClient_btnOk" />

    <Button
        android:id="@+id/btnAnnuler"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/modifClient_btnAnnuler" />

</LinearLayout><ScrollView>

</ScrollView>
